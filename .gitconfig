[core]
	autocrlf = input
	ignorecase = false

[color]
	ui = true

[diff]
        # Use beyond compare as the diff tool
	tool = bc3

	# Include summaries of merged commits in newly created merge commit messages
	log = true

[difftool]
	prompt = false

[help]
	# Automatically correct and execute mistyped commands
	autocorrect = 1

[hub]
        protocol = https

[merge]
	tool = bc3

[push]
	default = simple

